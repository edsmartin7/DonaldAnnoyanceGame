<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.emartin.donaldannoyancegame.MainActivity"
    >


    <LinearLayout
        android:id="@+id/top_section"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#3183E0"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/game_description"
            android:text="Guess how annoying Donald is..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Guess:  "
            />

        <TextView
            android:id="@+id/last_guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of Tries left:  "
            />

        <TextView
            android:id="@+id/number_of_tries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clue_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_section"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        >

        <EditText
            android:id="@+id/guessed_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Guess a number here"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_section"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#E35263"
        >

        <Button
            android:id="@+id/enter_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="true"
            android:text="Enter Number"
            />

        <Button
            android:id="@+id/new_game_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="true"
            android:text="New Game"
            />

    </LinearLayout>


</LinearLayout>
